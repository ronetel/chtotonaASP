@model IEnumerable<chtotonaASP.Models.User>

@{
    ViewData["Title"] = "Пользователи";
}


<h2>Пользователи</h2>
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
<table class="table">
    <thead>
        <tr class="text-white">
            <th>ID</th>
            <th>Имя</th>
            <th>Email</th>
            <th>Телефон</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr class="text-white">
                <td>@user.IdUser</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.RoleId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.IdUser" class="btn btn-primary">Редактировать</a>
                    <form asp-action="Delete" asp-route-id="@user.IdUser" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Создать нового пользователя</a>
