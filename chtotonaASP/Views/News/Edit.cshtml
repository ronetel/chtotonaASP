@model chtotonaASP.Models.News

@{
    ViewData["Title"] = "Редактировать новость";
}

<h2>Редактировать новость</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NewId" />
    <div class="form-group">
        <label asp-for="Caption">Заголовок</label>
        <input asp-for="Caption" class="form-control" />
        <span asp-validation-for="Caption" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Link">Ссылка</label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
