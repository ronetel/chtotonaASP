@model chtotonaASP.Models.ProductType

@{
    ViewData["Title"] = "Редактировать тип продукта";
}

<h2>Редактировать тип продукта</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductTypeId" />
    <div class="form-group">
        <label asp-for="ProductType1">Название типа продукта</label>
        <input asp-for="ProductType1" class="form-control" />
        <span asp-validation-for="ProductType1" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
