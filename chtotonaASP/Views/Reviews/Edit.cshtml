@model chtotonaASP.Models.Review

@{
    ViewData["Title"] = "Редактировать отзыв";
}

<h2>Редактировать отзыв</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ReviewId" />
    <div class="form-group">
        <label asp-for="ProductId">Товар</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId">Пользователь</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Рейтинг</label>
        <input asp-for="Rating" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Comment">Комментарий</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
